@model IEnumerable<Bai2.Models.Category> 

<h2>Products</h2> 
<a href="/Category/Add">Add</a>

<table class="table"> 

    <thead> 

        <tr> 

            <th>Name</th> 

            <th>Actions</th> 

        </tr> 

    </thead> 

    <tbody> 

        @foreach (var category in Model)

        { 

            <tr> 

                <td>@category.Name</td> 

                <td> 

                    <a asp-action="Update" asp-route-id="@category.Id">Edit</a> | 

                    <a asp-action="Delete" asp-route-id="@category.Id">Delete</a> 


                </td> 

            </tr> 

        } 

    </tbody> 

</table> 